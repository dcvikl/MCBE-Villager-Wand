{
    "format_version": "1.20.0",
    "minecraft:entity": {
        "description": {
            "identifier": "minecraft:villager",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "components": {
            "minecraft:interact": {
                "interactions": [
                    {
                        "text": "Follow me",
                        "on_interact": {
                            "event": "villager_wand:start_following"
                        }
                    },
                    {
                        "text": "Stay",
                        "on_interact": {
                            "event": "villager_wand:start_staying"
                        }
                    },
                    {
                        "text": "Feniks",
                        "on_interact": {
                            "event": "villager_wand:transform_feniks"
                        }
                    }
                ]
            },
            "minecraft:behavior.follow_owner": {
                "priority": 1,
                "within_radius": 20,
                "speed_multiplier": 1.0
            }
        },
        "events": {
            "villager_wand:start_following": {
                "add": {
                    "tags": [
                        "following"
                    ]
                }
            },
            "villager_wand:start_staying": {
                "add": {
                    "tags": [
                        "staying"
                    ]
                },
                "set_property": {
                    "movement": "none"
                }
            },
            "villager_wand:transform_feniks": {
                "transform_to": {
                    "entity": "minecraft:zombie_villager"
                }
            }
        }
    }
}